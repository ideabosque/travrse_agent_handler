{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": true,
  "definitions": {
    "paramSchema": {
      "additionalProperties": true,
      "properties": {
        "description": {
          "type": "string"
        },
        "items": {
          "$ref": "#/definitions/paramSchema"
        },
        "properties": {
          "additionalProperties": {
            "$ref": "#/definitions/paramSchema"
          },
          "type": "object"
        },
        "required": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "type": {
          "enum": [
            "string",
            "number",
            "integer",
            "boolean",
            "object",
            "array"
          ],
          "type": "string"
        }
      },
      "required": [
        "type"
      ],
      "type": "object"
    },
    "toolParameters": {
      "additionalProperties": true,
      "properties": {
        "properties": {
          "additionalProperties": {
            "$ref": "#/definitions/paramSchema"
          },
          "type": "object"
        },
        "required": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "type": {
          "const": "object"
        }
      },
      "required": [
        "type",
        "properties",
        "required"
      ],
      "type": "object"
    }
  },
  "properties": {
    "api_url": {
      "default": "https://api.travrse.ai/v1/dispatch",
      "description": "The Travrse AI API endpoint URL.",
      "type": "string"
    },
    "api_key": {
      "description": "The Travrse AI API key (Bearer token).",
      "type": "string"
    },
    "model": {
      "default": "gpt-4o",
      "description": "ID of the model that will generate the response (e.g. 'gpt-4o', 'gpt-4o-mini', 'claude-3-5-sonnet').",
      "type": "string"
    },
    "temperature": {
      "default": 0.1,
      "maximum": 1.0,
      "minimum": 0.0,
      "type": "number"
    },
    "response_format": {
      "default": "text",
      "description": "Response format type ('text', 'json_object', or 'json_schema').",
      "enum": [
        "text",
        "json_object",
        "json_schema"
      ],
      "type": "string"
    },
    "record_name": {
      "default": "Standalone Execution",
      "description": "Name for the execution record.",
      "type": "string"
    },
    "record_type": {
      "default": "standalone",
      "description": "Type of execution record.",
      "type": "string"
    },
    "record_metadata": {
      "description": "Optional metadata for the execution record.",
      "type": "object",
      "additionalProperties": true
    },
    "step_name": {
      "default": "Prompt 1",
      "description": "Name of the step in the flow.",
      "type": "string"
    },
    "record_mode": {
      "default": "virtual",
      "description": "Record mode (virtual or persistent).",
      "enum": [
        "virtual",
        "persistent"
      ],
      "type": "string"
    },
    "flow_name": {
      "default": "Agent Flow",
      "description": "Name of the agent flow.",
      "type": "string"
    },
    "flow_description": {
      "default": "Flow with 1 step",
      "description": "Description of the agent flow.",
      "type": "string"
    },
    "flow_mode": {
      "default": "virtual",
      "description": "Flow mode (virtual or persistent).",
      "enum": [
        "virtual",
        "persistent"
      ],
      "type": "string"
    },
    "max_tool_calls": {
      "default": 5,
      "description": "Maximum number of tool calls allowed.",
      "type": "integer"
    },
    "tool_call_strategy": {
      "default": "auto",
      "description": "Strategy for tool calling ('auto', 'required', 'none').",
      "enum": [
        "auto",
        "required",
        "none"
      ],
      "type": "string"
    },
    "mcp_proxy": {
      "description": "MCP proxy configuration for external tool integrations.",
      "type": "object",
      "properties": {
        "base_url": {
          "type": "string",
          "description": "Base URL for the MCP proxy endpoint."
        },
        "headers": {
          "type": "object",
          "description": "HTTP headers for MCP proxy requests.",
          "additionalProperties": {
            "type": "string"
          },
          "properties": {
            "Accept": {
              "type": "string",
              "description": "Accept header value.",
              "default": "application/json"
            },
            "x-api-key": {
              "type": "string",
              "description": "API key for MCP proxy authentication."
            }
          }
        }
      },
      "required": [
        "base_url",
        "headers"
      ]
    },
    "tool_ids": {
      "description": "Array of built-in tool IDs to enable (e.g., 'builtin:anthropic_web_search').",
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "enabled_tools": {
      "description": "Array of enabled tool names from the MCP proxy.",
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    }
  },
  "required": [
    "api_key",
    "model"
  ],
  "title": "Travrse AI Configuration Schema",
  "type": "object"
}